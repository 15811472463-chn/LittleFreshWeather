<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_city_weather_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_48dp"
    android:layout_alignParentTop="true"
    android:paddingLeft="@dimen/material_16dp"
    android:paddingRight="@dimen/material_16dp"
    android:background="@color/colorSemiTransparent"
    android:elevation="@dimen/material_8dp">

    <TextView
        android:id="@+id/tv_city_weather_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorLightGray"
        android:textSize="@dimen/material_24sp"
        android:text="@string/app_name"/>

    <Button
        android:id="@+id/bt_city_weather_toolbar_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/add_city"
        android:background="@drawable/button_background_selector"/>

</RelativeLayout>